{
  "name": "Scripts-Manager",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win portable"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Scripts",
    "Manager",
    "Addons",
    "Stream",
    "Twitch",
    "OBS"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^18.2.4"
  },
  "dependencies": {
    "@twurple/api": "^5.1.6",
    "@twurple/auth": "^5.1.6",
    "@twurple/chat": "^5.1.6",
    "@twurple/pubsub": "^5.1.6",
    "discord.js": "^13.8.0",
    "electron-store": "^8.0.1",
    "node-global-key-listener": "^0.1.1",
    "obs-websocket-js": "^4.0.3",
    "read-ini-file": "^3.0.1",
    "uniqid": "^5.4.0",
    "websocket": "^1.0.34",
    "write-ini-file": "^3.0.2"
  },
  "build": {
    "appId": "fr.arubinu.scripts-manager",
    "productName": "Scripts Manager",
    "copyright": "",
    "mac": {
      "target": [
        "zip"
      ]
    },
    "win": {
      "publisherName": "Arubinu",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "dmg": {
      "icon": "build/logo.icns"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
