{
  "name": "Scripts-Manager",
  "version": "2.0.0b6",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint --max-warnings=0 .",
    "lint-fix": "eslint --max-warnings=0 --fix .",
    "build": "electron-builder build --win portable"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Scripts",
    "Manager",
    "Addons",
    "Stream",
    "Twitch",
    "OBS"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^19.0.6",
    "eslint": "^8.33.0"
  },
  "dependencies": {
    "@twurple/api": "^5.1.6",
    "@twurple/auth": "^5.1.6",
    "@twurple/chat": "^5.1.6",
    "@twurple/eventsub-ws": "^5.3.3",
    "@twurple/pubsub": "^5.1.6",
    "discord.js": "^13.8.0",
    "electron-custom-notifications": "github:Arubinu/electron-custom-notifications",
    "electron-log": "^4.4.7",
    "electron-store": "^8.0.1",
    "node-global-key-listener": "^0.1.1",
    "obs-websocket-js": "^5.0.2",
    "read-ini-file": "^3.0.1",
    "spotify-web-api-node": "^5.0.2",
    "temp": "^0.9.4",
    "undici": "^5.5.1",
    "uniqid": "^5.4.0",
    "usb": "^2.4.3",
    "websocket": "^1.0.34",
    "write-ini-file": "^3.0.2"
  },
  "build": {
    "appId": "fr.arubinu.scripts-manager",
    "productName": "Scripts Manager",
    "copyright": "",
    "mac": {
      "target": [
        "zip"
      ]
    },
    "win": {
      "publisherName": "Arubinu",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "gitHooks": {
    "pre-push": "npm run lint"
  }
}
